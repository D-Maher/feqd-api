= form_for [:admin, @deck], local: true do |form|
  - if deck.errors.any?
    #error_explanation
      %h2
        = pluralize(deck.errors.count, "error")
        prohibited this deck from being saved:
      %ul
        - deck.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :title
    = form.text_field :title, id: :deck_title
  .field
    = form.label :description
    = form.text_area :description, id: :deck_description
  .actions
    = form.submit
